<h1>Articles listing</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>    
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article.id) %></td>
                <!-- <td><%= link_to 'Edit', article_path(article.id) + '/edit' %></td> # Works -->
                <!-- ##### The `article` arg below is a shortcut for `article.id` -->
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete, 
                        data: {confirm: "Are you sure?"} %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<br>
<%= link_to 'New Article', new_article_path %>
