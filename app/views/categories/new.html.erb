
<h1 class="row justify-content-center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, 
            class: "shadow p-3 mb-3 bg-info rounded", 
            local: true) do |f| %>
                
    <div class="form-group row">
        <%= f.label :category_name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", 
                placeholder: "Enter a category name" %>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <%= f.submit(class: "btn btn-outline-light btn-lg") %>
    </div>
<% end %>

<div class="row justify-content-center"> 
    <%= link_to '[ Cancel and return to articles listing ]', 
            articles_path, class: "mb-5 text-info" %>
</div>
